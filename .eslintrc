{
	"root": true,
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true,
				"project": ["./tsconfig.json"]
			}
		},
		"boundaries/include": ["src/**/*.ts", "src/**/*.tsx"],
		"boundaries/ignore": ["src/**/*.d.ts"],
		"boundaries/elements": [
			{
				"type": "adapters",
				"pattern": "adapters/*"
			},
			{
				"type": "domain",
				"pattern": "domain/*"
			},
			{
				"type": "application",
				"pattern": "application/*"
			},
			{
				"type": "infrastructure",
				"pattern": "infrastructure/*"
			}
		]
	},
	"extends": [
		"airbnb-base",
		"plugin:react/recommended",
		"plugin:boundaries/recommended",
		"plugin:sonarjs/recommended",
		"plugin:unicorn/recommended"
	],
	"plugins": [
		"arca",
		"align-assignments",
		"react",
		"react-hooks",
		"unicorn",
		"sonarjs",
		"boundaries",
		"import-newlines",
		"newline-destructuring"
	],
	"rules": {
		"no-use-before-define": 0,
		"boundaries/element-types": [
			2,
			{
				"default": "allow",
				"rules": [
					{
						"from": "domain",
						"disallow": ["infrastructure", "application", "adapters"],
						"message": "domain cannot use imports like: infrastructure,application,adapters"
					},
					{
						"from": "application",
						"disallow": ["adapters", "infrastructure"],
						"message": "application cannot use imports like: adapters,infrastructure"
					}
				]
			}
		],
		"newline-destructuring/newline": [2, { "items": 3, "maxLength": 80 }],
		"import-newlines/enforce": [
			2,
			{
				"items": 2,
				"max-len": 100,
				"semi": false
			}
		],
		"unicorn/prevent-abbreviations": [
			2,
			{
				"replacements": {
					"prop": false,
					"props": false,
					"lib": false,
					"env": false,
					"ref": false,
					"acc": false,
					"curr": false,
					"args": false,
					"str": false,
					"num": false,
					"fn": false,
					"NumLock": false,
					"Dev": false,
					"dev": false,
					"Prod": false,
					"prod": false,
					"req": false,
					"res": false
				}
			}
		],
		"unicorn/prefer-at": 2,
		"unicorn/prefer-export-from": 0,
		"unicorn/prefer-string-replace-all": 2,
		"unicorn/template-indent": [
			2,
			{
				"indent": 4,
				"tags": ["styled"],
				"functions": ["div"]
			}
		],
		"unicorn/explicit-length-check": 0,
		"unicorn/no-array-for-each": 0,
		"unicorn/no-array-callback-reference": 0,
		"unicorn/no-process-exit": 0,
		"unicorn/filename-case": 0,
		"unicorn/no-null": 0,
		"unicorn/prefer-spread": 0,
		"unicorn/no-array-reduce": 0,
		"unicorn/consistent-function-scoping": 0,
		"unicorn/prefer-module": 0,
		"align-assignments/align-assignments": [
			2,
			{
				"requiresOnly": false
			}
		],
		"no-tabs": [
			2,
			{
				"allowIndentationTabs": true
			}
		],
		"array-callback-return": 0,
		"no-restricted-imports": [
			2,
			{
				"paths": [
					{
						"name": "styled-components/macro",
						"message": "Please import from styled-components."
					}
				],
				"patterns": ["!styled-components"]
			}
		],
		"no-console": [
			2,
			{
				"allow": ["warn", "error", "info"]
			}
		],
		"import/order": [
			2,
			{
				"groups": [
					["builtin", "external"],
					"internal",
					["parent", "sibling"],
					"index",
					"type",
					"object"
				],
				"newlines-between": "always"
			}
		],
		"multiline-ternary": [2, "always"],
		"prefer-arrow-callback": 2,
		"import/group-exports": 2,
		"default-param-last": 0,
		"no-sequences": 0,
		"no-bitwise": 0,
		"arrow-parens": 0,
		"no-restricted-syntax": 0,
		"lines-between-class-members": 0,
		"max-len": 0,
		"no-unused-vars": 0,
		"no-redeclare": 0,
		"no-return-await": 0,
		"no-new": 0,
		"no-plusplus": 0,
		"no-shadow": 0,
		"no-undef": 0,
		"no-magic-numbers": 0,
		"operator-linebreak": 0,
		"linebreak-style": 0,
		"import/no-dynamic-require": 0,
		"global-require": 0,
		"no-useless-escape": 0,
		"no-useless-constructor": 0,
		"no-unneeded-ternary": 0,
		"no-unused-expressions": 0,
		"no-useless-return": 0,
		"computed-property-spacing": 0,
		"class-methods-use-this": 0,
		"react/destructuring-assignment": [2, "always"],
		"react/prop-types": 0,
		"react/react-in-jsx-scope": 0,
		"react/jsx-one-expression-per-line": 2,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-curly-newline": [
			2,
			{
				"multiline": "consistent",
				"singleline": "consistent"
			}
		],
		"react/jsx-indent-props": [2, "tab"],
		"react/jsx-tag-spacing": 2,
		"react/display-name": 0,
		"react/jsx-closing-bracket-location": [2],
		"react/jsx-curly-spacing": [
			2,
			{
				"when": "always",
				"children": true
			}
		],
		"react/jsx-handler-names": 2,
		"react/jsx-first-prop-new-line": [2, "multiline-multiprop"],
		"react/jsx-max-props-per-line": [2, { "maximum": { "single": 2, "multi": 1 } }],
		"react/jsx-newline": [2, { "prevent": false }],
		"react/sort-default-props": 2,
		"react/jsx-sort-props": [
			2,
			{
				"callbacksLast": true,
				"shorthandFirst": true
			}
		],
		"react/jsx-pascal-case": [
			2,
			{
				"allowNamespace": true
			}
		],
		"react/no-danger": 2,
		"react/no-multi-comp": 2,
		"react/prefer-stateless-function": 2,
		"react/self-closing-comp": 2,
		"import/prefer-default-export": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-unresolved": 0,
		"import/extensions": 0,
		"indent": [
			2,
			"tab",
			{
				"VariableDeclarator": 1,
				"SwitchCase": 1,
				"ignoredNodes": ["TemplateLiteral > *"]
			}
		],
		"implicit-arrow-linebreak": 0,
		"consistent-return": 0,
		"comma-dangle": [2, "never"],
		"template-curly-spacing": [2, "always"],
		"object-curly-spacing": [2, "always"],
		"object-curly-newline": [
			2,
			{
				"ObjectExpression": { "consistent": true }
			}
		],
		"array-bracket-spacing": [2, "always"],
		"no-multi-spaces": 0,
		"one-var": 0,
		"func-names": 0,
		"function-paren-newline": 0,
		"lines-around-comment": [
			2,
			{
				"beforeBlockComment": true,
				"afterBlockComment": false,
				"beforeLineComment": true,
				"afterLineComment": false,
				"allowBlockStart": true,
				"allowBlockEnd": true,
				"allowObjectStart": true,
				"allowObjectEnd": true,
				"allowArrayStart": true,
				"allowArrayEnd": true
			}
		],
		"key-spacing": [
			2,
			{
				"align": "colon"
			}
		],
		"arca/import-align": [
			2,
			{
				"collapseExtraSpaces": true
			}
		],
		"arca/melted-constructs": 2,
		"no-underscore-dangle": 0,
		"react-hooks/rules-of-hooks": 2,
		"react-hooks/exhaustive-deps": 2,
		"no-useless-computed-key": 0
	},
	"overrides": [
		{
			"files": ["./src/shared/generated.gql.ts"],
			"rules": {
				"import/group-exports": 0,
				"no-use-before-define": 0
			}
		},
		{
			"files": ["*.d.ts"],
			"rules": {
				"import/group-exports": 0,
				"@typescript-eslint/consistent-type-imports": [
					2,
					{ "prefer": "type-imports", "disallowTypeAnnotations": false }
				]
			}
		},
		{
			// enable the rule specifically for TypeScript files
			"files": ["*.ts", "*.tsx"],
			"parser": "@typescript-eslint/parser",
			"extends": "plugin:@typescript-eslint/recommended",
			"parserOptions": {
				"project": "./tsconfig.json",
				"ecmaVersion": "latest",
				"sourceType": "module",
				"ecmaFeatures": {
					"jsx": true
				}
			},
			"rules": {
				"no-return-await": 0,
				"no-empty-function": 0,
				"@typescript-eslint/return-await": 2,
				"@typescript-eslint/no-non-null-assertion": 0,
				"@typescript-eslint/method-signature-style": [2, "method"],
				"@typescript-eslint/consistent-type-assertions": 0,
				"@typescript-eslint/prefer-includes": 2,
				"@typescript-eslint/prefer-optional-chain": 2,
				"@typescript-eslint/prefer-string-starts-ends-with": 2,
				"@typescript-eslint/prefer-ts-expect-error": 2,
				"@typescript-eslint/require-array-sort-compare": 2,
				"@typescript-eslint/type-annotation-spacing": 2,
				"@typescript-eslint/no-explicit-any": 0,
				"@typescript-eslint/no-var-requires": 0,
				"@typescript-eslint/ban-ts-comment": 0,
				"@typescript-eslint/consistent-indexed-object-style": 2,
				"@typescript-eslint/consistent-generic-constructors": [2, "constructor"],
				"@typescript-eslint/consistent-type-exports": 2,
				"@typescript-eslint/consistent-type-imports": 2,
				"@typescript-eslint/init-declarations": 2,
				"@typescript-eslint/member-ordering": 2,
				"@typescript-eslint/no-confusing-void-expression": 2,
				"@typescript-eslint/no-extraneous-class": 2,
				"@typescript-eslint/no-floating-promises": 2,
				"@typescript-eslint/no-unnecessary-type-arguments": 2,
				"@typescript-eslint/no-empty-function": [
					2,
					{ "allow": ["constructors", "arrowFunctions"] }
				],
				"@typescript-eslint/prefer-return-this-type": 2,
				"@typescript-eslint/no-unnecessary-boolean-literal-compare": [
					2,
					{ "allowComparingNullableBooleansToFalse": true }
				],
				"@typescript-eslint/explicit-member-accessibility": [
					2,
					{ "accessibility": "no-public" }
				],
				"@typescript-eslint/ban-types": [
					2,
					{
						"types": {
							"String": {
								"message": "Use string instead",
								"fixWith": "string"
							}
							// add other bans
						}
					}
				],
				"@typescript-eslint/member-delimiter-style": [
					2,
					{
						"multiline": {
							"delimiter": "comma",
							"requireLast": false
						},
						"singleline": {
							"delimiter": "comma",
							"requireLast": false
						},
						"overrides": {
							"interface": {
								"multiline": {
									"delimiter": "semi",
									"requireLast": true
								}
							}
						}
					}
				]
			}
		}
	]
}
